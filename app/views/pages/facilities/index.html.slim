= facilities_submenu

.country-map
  - cities.each do |city|
    = link_to '', '#', class: 'country-map-pointer js-map-pointer', style: "left: #{city.map_x}px; top: #{city.map_y}px", data: { target: city.id }

  - facilities_by_city.each do |city_id, facilities|
    .country-map-popup.invisible.js-popup.js-map-popup data-target=city_id
      = link_to '#', class: 'close js-popup-close' do
        span.fa.fa-times-circle

      h5 = City.find(city_id).title
      - facilities[0..3].each do |facility|
        p = link_to facility.title, page_path(facility.path)

  = image_tag 'russian_map.png'